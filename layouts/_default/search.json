{{- $.Scratch.Add "index" slice -}}
{{- range where site.RegularPages "Type" "in" site.Params.mainSections -}}
  {{- $.Scratch.Add "index" (dict "title" .Title "href" .Permalink "content" (.Plain | truncate 500) "summary" .Summary "date" .Date.Format "2006-01-02") -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}