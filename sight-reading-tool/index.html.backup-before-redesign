    // 全局变量：当前选择的产品类型
    window.currentProductType = 'all';

    // 切换产品 Tab
    window.switchProductTab = function(productType) {
      console.log('🔄 切换产品:', productType);
      
      // 更新全局变量
      window.currentProductType = productType;
      
      // 更新 Tab 激活状态
      const tabs = document.querySelectorAll('.product-tab');
      tabs.forEach(tab => {
        if (tab.dataset.product === productType) {
          tab.classList.add('active');
        } else {
          tab.classList.remove('active');
        }
      });
      
      // 更新产品信息展示
      updateProductInfo(productType);
    };

    // 更新产品信息展示
    function updateProductInfo(productType) {
      const config = PRODUCT_CONFIG[productType];
      if (!config) return;

      const infoDisplay = document.getElementById('product-info-display');
      if (!infoDisplay) return;

      // 构建特性HTML
      const featuresHTML = config.features.map(feature => 
        `<span class="product-info-feature">${feature.icon} ${feature.text}</span>`
      ).join('');

      // 更新内容
      infoDisplay.innerHTML = `
        <div class="product-info-title">${config.title} - ${config.subtitle}</div>
        <div class="product-info-description">${config.description}</div>
        <div class="product-info-features">${featuresHTML}</div>
      `;
    }

    // 页面加载时初始化
    document.addEventListener('DOMContentLoaded', function() {
      console.log('✅ 产品选择器已初始化');
      // 确保初始状态为三合一套餐
      window.switchProductTab('all');
    });

  })();
  </script>
