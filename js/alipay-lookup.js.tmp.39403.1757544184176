    const recoverButton = document.getElementById('recover-access-code-btn');
    if (recoverButton) {
        recoverButton.onclick = showAlipayLookupDialog;
        console.log('âœ… æ”¯ä»˜å®è´¦å·æŸ¥æ‰¾åŠŸèƒ½å·²ç»‘å®š');
    } else {
        console.warn('âš ï¸ æœªæ‰¾åˆ° recover-access-code-btn æŒ‰é’®');
    }
});