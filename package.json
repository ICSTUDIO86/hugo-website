{
  "name": "pehtheme",
  "version": "1.0.0",
  "description": "An open-source Hugo theme lovingly crafted using Tailwind CSS.",
  "main": "index.js",
  "scripts": {
    "dev:generate": "npx tailwindcss -i ./assets/input.css -o ./themes/pehtheme-hugo/assets/css/main.css -w",
    "dev:hugo": "hugo server",
    "dev": "run-p dev:*",
    
    "build:css": "npx tailwindcss -i ./assets/input.css -o ./static/css/main.css --minify",
    "build:js": "npm run minify:js",
    "build:hugo": "hugo",
    "build": "run-s build:css build:js build:hugo",
    
    "minify:js": "terser static/js/*.js --output static/js/bundle.min.js --compress --mangle",
    "minify:css": "cleancss -o static/css/main.min.css static/css/main.css",
    
    "optimize:images": "imagemin 'static/images/**/*.{jpg,png}' --out-dir=static/images/optimized --plugin=mozjpeg --plugin=pngquant",
    "optimize:webp": "imagemin 'static/images/**/*.{jpg,png}' --out-dir=static/images/webp --plugin=webp",
    "optimize": "run-p optimize:*",
    
    "analyze:bundle": "webpack-bundle-analyzer static/js/bundle.min.js",
    "analyze:performance": "lighthouse http://localhost:1313 --output=html --output-path=./reports/lighthouse.html",
    
    "prestart": "npm run build:css",
    "start": "hugo server --disableFastRender",
    "prebuild": "npm run optimize",
    
    "test:lighthouse": "lighthouse http://localhost:1313 --quiet --chrome-flags='--headless'",
    "test:performance": "npm run test:lighthouse"
  },
  "keywords": [
    "hugo",
    "tailwindcss"
  ],
  "author": "Fauzan My",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.3.3",
    "terser": "^5.24.0",
    "clean-css-cli": "^5.6.3",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-webp": "^7.0.0",
    "lighthouse": "^11.4.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "brotli": "^1.3.3"
  },
  "dependencies": {
    "hugo-lunr": "^0.0.4",
    "lunr": "^2.3.9"
  }
}
